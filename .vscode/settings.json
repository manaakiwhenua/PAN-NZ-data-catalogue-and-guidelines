{
    "editor.rulers": [
        80
    ],
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.wordWrap": "off", // disables VS Code's soft wrap so Rewrap takes control
        "editor.defaultFormatter": "stkb.rewrap"
    },
    "rewrap.wrappingColumn": 80,
    "rewrap.autoWrap.enabled": true,
    "rewrap.autoWrap.onSave": true,
    "rewrap.languageSettings": {
        "markdown": {
            "wrappingColumn": 80,
            "autoWrap": true
        }
    }
}